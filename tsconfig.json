{
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noEmit": false,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "composite": false,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/redux/slices/modalSlice.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
